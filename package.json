{
	"private": true,
	"author": "Thassilo Martin Schiepanski",
	"workspaces": [
		"./packages/*"
	],
	"scripts": {
		"copy-commons": "node ./scripts/cp-tsconfig.js",
		"compile": "npm run copy-commons && npm run compile -ws",
		"compile:core": "npm run compile:watch -w @rapidjs.org/core",
		"compile:rjs": "npm run build -w @rapidjs.org/core && npm run compile:watch -w @rapidjs.org/rjs",
		"debug": "./rjs.sh start -W ./test-app/",
		"debug:dev": "./rjs.sh start -W ./test-app/ -D",
		"lint": "npx eslint --ext .ts ./packages/*/src/*",
		"lint:fix": "npx eslint --ext .ts --fix ./packages/*/src/*"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^6.19.1",
		"@typescript-eslint/parser": "^6.19.1",
		"eslint": "^8.56.0",
		"eslint-plugin-typescript": "^0.14.0"
	}
}