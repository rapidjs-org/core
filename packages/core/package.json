{
    "name": "@rapidjs.org/core",
    "version": "0.1.0",
    "description": "No- and low-code web application development framework for JavaScript",
    "author": {
        "name": "Thassilo Martin Schiepanski",
        "url": "https://github.com/t-ski",
        "githubUsername": "t-ski"
    },
    "homepage": "https://rapidjs.org",
    "keywords": [
        "rapidjs",
        "rapidjs.org"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/rapidjs-org/core.git"
    },
    "bugs": {
        "url": "https://github.com/rapidjs-org/core/issues"
    },
    "main": "./build/api.js",
    "types": "./types/api.d.ts",
    "files": [
        "./build/",
        "./types/"
    ],
    "scripts": {
        "debug": "node ./test-app/app.js",
        "test:unit": "node ../../scripts/test/app.js unit ./test/unit/",
        "test:request": "node ../../scripts/test/app.js request ./test/request/",
        "test": "npm run test:unit && npm run test:request",
        "build": "rm -rf ./build/ && npx tsc --project ./tsconfig.build.json",
        "compile": "npx tsc --project ./tsconfig.debug.json",
        "compile:watch": "npm run compile -- --watch"
    }
}