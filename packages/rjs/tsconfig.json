{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "es2017",        
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "noEmitOnError": true,
        "allowJs": true,
        "declaration": true,
        "declarationDir": "./types/",
        "rootDir": "./src/",
        "paths": {
            "@common/types": [
                "../common.types"
            ]
        }
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.json"
    ]
}